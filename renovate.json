{
  "enabled": true,
  "baseBranches": [
    "8.0",
    "7.4"
  ],
  "extends": [
    "config:base",
    "schedule:nonOfficeHours",
    ":semanticCommitTypeAll(chore)"
  ],
  "automerge": true,
  "separateMultipleMajor": true,
  "timezone": "Europe/Paris",
  "commitBodyTable": true,
  "versioning": "loose",
  "rangeStrategy": "pin",
  "ignoreDeps": [
    "digitalswing/php-ansible",
    "circleci/mariadb",
    "codeception/module-asserts",
    "codeception/module-phpbrowser",
    "codeception/module-webdriver",
    "codeception/module-db",
    "codeception/module-filesystem",
    "codeception/module-cli",
    "codeception/util-universalframework"
  ],
  "packageRules": [
    {
      "addLabels": [
        "SemVer Major"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "addLabels": [
        "SemVer Minor"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "addLabels": [
        "SemVer Patch"
      ],
      "matchUpdateTypes": [
        "patch",
        "digest",
        "bump"
      ]
    },
    {
      "addLabels": [
        "Lang PHP"
      ],
      "matchLanguages": [
        "php"
      ]
    },
    {
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "additionalBranchPrefix": "php-minor-",
      "prPriority": 3
    },
    {
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "additionalBranchPrefix": "php-major-",
      "prPriority": 2
    },
    {
      "matchDepTypes": [
        "require-dev"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "additionalBranchPrefix": "php-dev-major-",
      "prPriority": -2
    },
    {
      "matchDepTypes": [
        "require-dev"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "additionalBranchPrefix": "php-dev-minor-",
      "prPriority": -1
    },
    {
      "matchPackagePrefixes": "wpackagist-plugin",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "require-dev"
      ],
      "additionalBranchPrefix": "plugins-dev-major-",
      "prPriority": 0,
      "semanticCommitType": "wp",
      "semanticCommitScope": "plugins"
    },
    {
      "matchPackagePrefixes": "wpackagist-plugin",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDepTypes": [
        "require-dev"
      ],
      "additionalBranchPrefix": "plugins-dev-minor-",
      "prPriority": 1,
      "semanticCommitType": "wp",
      "semanticCommitScope": "plugins"
    },
    {
      "matchManagers": [
        "circleci"
      ],
      "additionalBranchPrefix": "circleci"
    }
  ]
}